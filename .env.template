# Environment Configuration Template for RSG Platform
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database Configuration (Azure PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DATABASE_HOST=your-postgres.postgres.database.azure.com
DATABASE_PORT=5432
DATABASE_NAME=rsg_db
DATABASE_USER=rsgadmin
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=true

# Session Configuration
SESSION_SECRET=your-random-secret-key-change-in-production

# Authentication (Optional - for OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Application URLs
APP_URL=http://localhost:3000
CALLBACK_URL=http://localhost:3000/auth/callback

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AUTHENTICATION=true

# Azure Configuration (for Terraform)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=rsg-platform-rg
AZURE_LOCATION=westus2

# Vercel (for deployment)
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id
